{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "target": "ES2021",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "noUnusedLocals": true,
        "rootDir": "src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}